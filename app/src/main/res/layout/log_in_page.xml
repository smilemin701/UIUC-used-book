<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInPage"
    android:id="@+id/log_in_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="#0D1B39"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Logo"
                android:layout_width="125dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:src="@drawable/logo"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:text="UIUC Used Book Market"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/BtnLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0D1B39"
            android:orientation="vertical">

            <EditText
                android:id="@+id/emailofLogIn"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="#E4D4CB"
                android:hint="School Email (ex. cs125@illinois.edu)"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#000000"
                android:textColorHint="#B58E8E"></EditText>

            <EditText
                android:id="@+id/passwordofLogIn"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#E4D4CB"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#000000"
                android:textColorHint="#B58E8E"></EditText>

            <TextView
                android:id="@+id/errorDisplayofLogin"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#bbbbbb" />

            <TextView
                android:id="@+id/errorDisplay2ofLogin"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#bbbbbb" />

            <Button
                android:id="@+id/loginofLogin"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="#FD9153"
                android:text="Login"
                android:textColor="#ffffff"></Button>

            <Button
                android:id="@+id/BtnSignin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="#000D112C"
                android:text="Sign Up"
                android:textColor="#ffffff"></Button>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="45dp"
                android:layout_height="49dp"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="45dp"
                app:srcCompat="@drawable/cs125_logo" />


        </LinearLayout>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>